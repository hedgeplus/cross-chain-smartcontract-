{
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "printWidth": 80,
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": false,
        "explicitTypes": "preserve"
      }
    },
    {
      "files": ["*.ts", "*.js", "*.md", "*.test.js"],
      "options": {
        "printWidth": 100,
        "semi": false,
        "singleQuote": true,
        "bracketSpacing": true,
        "trailingComma": "es5"
      }
    },
    {
      "files": ["*.json"],
      "options": {
        "useTabs": false
      }
    },
    {
      "files": "*.md",
      "options": {
        "useTabs": false
      }
    }
  ]
}
